{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "EmailSettings": {
    "ApiKey": "sendgrid-key",
    "FromAddress": "no-reply@hrsystems.com",
    "FromName": "HR Management system"
  },
  "JwtSettings": {
    "Key": "SECRET_JWT_KEY_HERE_FOR_AUTHORIZATION",
    "Issuer": "HRLeaveManagement.Api",
    "Audience": "HRLeavemanagementUser",
    "DurationInMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {

        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
